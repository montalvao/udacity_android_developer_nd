<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.popmovies.MovieDetailsActivity">

    <ImageView
        android:id="@+id/imageview_details_poster"
        android:layout_width="180dp"
        android:layout_height="0dp"
        app:srcCompat="@android:color/background_dark"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="0dp" />

    <TextView
        android:id="@+id/textview_details_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Spiderman: Homecoming again and again"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageview_details_poster"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textview_details_titleoriginal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Spiderman: Homecoming again and again"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textview_details_title"
        app:layout_constraintTop_toBottomOf="@+id/textview_details_title"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textview_details_user_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating: 5.0"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/textview_details_title"
        app:layout_constraintTop_toBottomOf="@+id/textview_details_titleoriginal"
        android:layout_marginTop="16dp" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_details_user_rating"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageview_details_poster"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp">
        <TextView
            android:id="@+id/textview_details_plot_synopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:text="Following the events of Captain America: Civil War, Peter Parker, with the help of his mentor Tony Stark, tries to balance his life as an ordinary high school student in Queens, New York City, with fighting crime as his superhero alter ego Spider-Man as a new threat, the Vulture, emerges."
            android:textSize="14sp" />
    </ScrollView>
</android.support.constraint.ConstraintLayout>
